      <!-- Page Topic -->
      <section id="personalisedMessage">
        <div class="content justify-center text-center pt-10 mt-10">
          <h1
            class="font-extrabold text-transparent text-5xl bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
          >
            Formal Letters
          </h1>
          <p class="text-xl text-white pt-6 max-w-sm mx-auto">
            Just enter the type of letter, person to write to and a short
            description and get your letter ready to be sent
          </p>
        </div>
      </section>

      <!-- Real Working -->

      <section id="getAnswer">
        <!-- flex-row division -->
        <div
          class="flex flex-row mt-24 space-x-32 justify-center"
          style="padding: 0;"
        >
          <!-- form -->
          <div class="text-white">

            <form
              method="post"
              action="/letter"
              class="leading-10"
              style="margin-left: 10rem;"
            >
              <label
                for="typeOfLetter"
                class="block mb-2 text-white"
              >Category</label>
              <input
                style="padding: 5px;"
                placeholder="LOR / Apology / Resignation / Sales"
                type="text"
                id="language"
                name="typeOfLetter"
                required
                class="bg-transparent text-white rounded-lg w-96"
                value="{{langtypeOfLetteruage}}"
              />

              <label
                for="recipient"
                class="block mb-2 text-white pt-2"
              >Recipient</label>
              <div class="flex">
                <input
                  style="padding: 5px;"
                  placeholder="Boss / Dean / Product Manager"
                  type="text"
                  id="replyToMessage1"
                  name="recipient"
                  required
                  class="bg-transparent text-white rounded-lg w-96"
                  value="{{replyTrecipientoMessage}}"
                />

              </div>

              <label for="about" class="block mb-2 text-white">Short Description</label>
              <div class="flex">
                <input
                  style="padding: 5px;"
                  placeholder="e.g I resign because I got a better offer "
                  type="text"
                  id="replyToMessage2"
                  name="about"
                  required
                  class="bg-transparent text-white rounded-lg w-96"
                  value="{{about}}"
                />

              </div>

              <button
                type="submit"
                class="bg-transparent border-gray-400 text-white text-cyan-300 pl-16 pt-7 text-2xl"
              >Generate â†’</button>
            </form>

          </div>
          <div style="margin-right: 10rem;">
            <label
              for=""
              style="font-size: 1.5rem; font-weight:large; color: white"
            >{{label}}</label><br />
            <textarea
              style="padding: 5px;"
              placeholder="Your personalised letter will appear here"
              name=""
              id=""
              cols="50"
              rows="18"
              class="bg-transparent text-white rounded-lg"
            >{{data}}</textarea>
          </div>
        </div>
      </section>
    </section>

    <script src="../../app.js"></script>
