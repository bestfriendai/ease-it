<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EaseIt - Diet Chart</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;1,300&family=Roboto:wght@100&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="stylesheet" href="../css/styles.css" />

  </head>

  <body class="mb-56">

    <!-- Navbar -->
    <nav
      class="flex w-screen justify-center items-center text-center pt-10 bg-grey"
    >
      <!-- Flex Container -->
      <div
        class="inline-flex items-center justify-between space-x-9 bg-transparent py-4 px-20 rounded-2xl bg-black/10"
      >
        <!-- logo -->
        <a href="/" class="text-cyan-300 text-right" style="font-size:1.5rem">
          ←
        </a>
        <img src="../img/openai-logo.svg" class="pt-px" alt="" />
        <!-- Links -->
        <a
          href="/"
          class="font-extrabold text-transparent text-2xl bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
        >EaseIt</a>
        <a href="" class="text-white">Profile</a>
        <a href="" class="text-white">Logout</a>
      </div>
    </nav>

    <!-- Page Topic -->
    <section id="personalisedMessage">
      <div class="content justify-center text-center pt-10 mt-10">
        <h1
          class="font-extrabold text-transparent text-5xl bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
        >
          Diet Chart
        </h1>
        <p class="text-xl text-white pt-6 max-w-sm mx-auto">
          Enter your caloric intake, amount of carbs, proteins and fats and get
          your diet chart
        </p>
      </div>
    </section>

    <section id="getAnswer">
      <!-- flex-row division -->
      <div class="flex flex-row mt-24 space-x-32 justify-center">
        <!-- form -->
        <div class="text-white" style="">

          <form method="post" action="/dietchart" class="leading-10">
            <label for="calories" class="block mb-2 text-white">Total Calories (
              in kCal)</label>
            <input
              style="padding: 5px;"
              placeholder="e.g 2300"
              type="text"
              name="calories"
              required
              class="bg-transparent text-white rounded-lg w-96"
              style="border-color: 2px solid grey;"
              value="{{calories}}"
            />

            <label for="veg" class="block mb-2 text-white pt-2">Vegetarian /
              Non-vegetarian</label>
            <input
              style="padding: 5px;"
              placeholder="e.g Vegetarian / Non-vegetarian / Vegan"
              type="text"
              id="replyToMessage1"
              name="veg"
              required
              class="bg-transparent text-white rounded-lg w-96"
              value="{{veg}}"
            />

            <label for="protein" class="block mb-2 text-white">Proteins (in gms)</label>
            <input
              style="padding: 5px;"
              placeholder="e.g 100"
              type="text"
              id="replyToMessage2"
              name="protein"
              required
              class="bg-transparent text-white rounded-lg w-96"
              value="{{protein}}"
            />

            <label for="country" class="block mb-2 text-white">Country Of
              Residence</label>
            <input
              style="padding: 5px;"
              placeholder="e.g India, USA, China"
              type="text"
              id=""
              name="country"
              required
              class="bg-transparent text-white rounded-lg w-96"
              value="{{country}}"
            />

            <label for="complications" class="block mb-2 text-white">Any Health
              Complications</label>
            <input
              style="padding: 5px;"
              placeholder="e.g Diabetes, Asthma, Blood Pressure"
              type="text"
              id=""
              name="complications"
              required
              class="bg-transparent text-white rounded-lg w-96"
              value="{{complications}}"
            />

            <br />

            <button
              type="submit"
              class="bg-transparent text-white text-cyan-300 pl-16 pt-7 text-2xl"
            >Generate →</button>
          </form>

        </div>
        <div id="diet-chart"> 
          <label
            for=""
            style="font-size: 1.5rem; font-weight:large; color: white"
          >{{label}}</label><br />
          <textarea
            style="padding: 5px;"
            placeholder="Your diet chart will appear here"
            name=""
            
            cols="50"
            rows="15"
            class="input-border text-transparent bg-clip-text rounded-lg bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-4"
          >{{data}}</textarea>
          {{!-- <button id="download-as-pdf">Download as PDF</button> --}}
        </div>

      </div>
    </section>

    <script src="../../app.js"></script>
    <script defer src="../../public/js/promptCall.js"></script>
    
    
  </body>

</html>