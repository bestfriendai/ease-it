<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css"
    />
    <link rel="stylesheet" href="../css/styles.css" />
    <title>EaseIt - ReadMe From Code</title>
  </head>
  <body>

    <div
      class="sidebar fixed top-0 bottom-0 lg:left-0 p-2 w-[300px] overflow-y-auto text-center bg-black/20 shadow-md backdrop-blur-2xl rounded-2xl"
    >
      <div class="text-gray-100 text-xl">
        <div class="p-2.5 mt-1 flex items-center">
          <h1
            class="ml-3 text-2xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
          ><a href="/"> EaseIt </a></h1>
          <i
            class="bi bi-x cursor-pointer ml-28 lg:hidden"
            onclick="openSidebar()"
          ></i>
        </div>

        <div class="my-2 bg-gray-600 h-[1px]"></div>

        <div class="p-2.5 mt-1 flex items-center">
          <h1 class="ml-3 font-bold">Developers</h1>
          <i
            class="bi bi-x cursor-pointer ml-28 lg:hidden"
            onclick="openSidebar()"
          ></i>
        </div>

        <div class="my-4"></div>
      </div>

      <div
        class="p-2.5 flex items-center rounded-md px-4 duration-300 cursor-pointer bg-transparent input-border text-white"
      >
        <i class="fi fi-rr-search"></i>
        <input
          id="searchInput"
          type="text"
          placeholder="Search"
          class="text-[15px] ml-4 w-full bg-transparent focus:outline-none"
        />
      </div>

      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-gray-900 text-white"
      >
        <i class="fi fi-rr-restaurant"></i>
        <span class="text-[15px] ml-4 text-gray-200"><a href="/debugcode">Debug
            Code</a></span>
      </div>

      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-gray-900 text-white"
      >
        <i class="fi fi-rr-biking-mountain"></i>
        <span class="text-[15px] ml-4 text-gray-200"><a
            href="/codeexplanation"
          >Code Explanation</a></span>
      </div>

      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-gray-900 text-white bg-gray-600"
      >
        <i class="fi fi-rr-biking-mountain"></i>
        <span class="text-[15px] ml-4 text-gray-200"><a
            href="/readmefromcode"
          >Generate Github ReadMe</a></span>
      </div>
      <div class="my-4 bg-gray-600 h-[1px]"></div>

      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-gray-700 text-white"
      >
        <i class="fi fi-rr-angle-small-left"></i>
        <span class="text-[15px] ml-4 text-gray-200"><a
            href="/homepage"
          >Back</a></span>
      </div>

      <div
        class="p-2.5 mt-3 flex items-center rounded-md px-4 duration-300 cursor-pointer hover:bg-gray-700 text-white"
      >
        <i class="fi fi-rr-exit"></i>
        <span class="text-[15px] ml-4 text-gray-200">Logout</span>
      </div>
    </div>

    <section id="content" class="lg:ml-80 pb-12">

      <!-- Page Topic -->
      <section id="personalisedMessage">
        <div class="content justify-center text-center pt-10 mt-10">
          <h1
            class="font-extrabold text-transparent text-5xl bg-clip-text bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500"
          >
            Generate Github ReadMe
          </h1>
          <p class="text-xl text-white pt-6 max-w-sm mx-auto">
            Enter the whole code and get an organised readme for the same
          </p>
        </div>
      </section>

      <section id="getAnswer">
        <!-- flex-row division -->
        <div class="flex flex-row mt-24 space-x-32 justify-center">
          <!-- message -->
          <div class="text-white">
            <div>
              <form method="post" action="/readmefromcode">
                <label
                  for="inputCode"
                  style="font-size: 1.5rem; font-weight:large; color: white"
                >Enter your code here</label><br />
                <textarea
                  style="padding: 5px;"
                  placeholder="type here..."
                  name="inputCode"
                  required
                  id=""
                  cols="60"
                  rows="20"
                  class="bg-transparent text-white rounded-lg"
                >{{inputCode}}</textarea><br />
                <button
                  type="submit"
                  class="bg-transparent border-gray-400 text-white text-cyan-300 pl-24 pt-7 text-2xl"
                >Create ReadMe â†’</button>
              </form>
            </div>
          </div>
          <div>
            <label
              for=""
              style="font-size: 1.5rem; font-weight:large; color: white"
            >{{label}}</label><br />
            <textarea
              style="padding: 5px;"
              placeholder="answer will appear here"
              name=""
              id=""
              cols="60"
              rows="20"
              class="input-border text-transparent bg-clip-text rounded-lg"
            >{{data}}</textarea>
          </div>
        </div>
      </section>

    </section>

    <script src="../../app.js"></script>
    <script defer src="../../public/js/promptCall.js"></script>

  </body>
</html>